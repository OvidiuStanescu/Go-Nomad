<div class="general-form">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="create-main-title">Edit review </h1>
                <hr>
                <form action="/reviews/update/{{comm.id}}/{{city}}" method="POST">
                    <div class="mb-2">
                        <label for="title" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="title" name="title" value="{{comm.title}}">
                    </div>
                    <div class="mb-3">
                        <label for="review" class="form-label">Review</label>
                        <input type="text" class="form-control" id="review" name="review" value="{{comm.review}}">
                    </div>
                    <button type="submit" class="btn btn-dark">Edit review</button>
                </form>
            </div>
        </div>
    </div>
</div>