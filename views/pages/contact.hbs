<div class="general-form">
    <div class="container create-form">

        <div class="row justify-content-center">

            <div class="col-md-6">

                <h1 class="create-main-title">Let's Talk</h1>

                <hr>

                <form action="/contact" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label"><i>Email</i></label>
                        <input type="email" class="form-control" id="title" name="email">
                    </div>

                    <div class="mb-3">
                        <label for="subject" class="form-label"><i>Subject</i></label>
                        <input type="text" class="form-control" id="subject" name="subject">
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label"><i>Message</i></label>
                        <textarea type="text" class="form-control" id="message" name="message"></textarea>
                    </div>

                    <button type="submit" class="btn btn-light submit-link">Send</button>
                </form>

            </div>
        </div>
    </div>
</div>